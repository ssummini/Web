<script type="text/javascript">
//재할당이 안된다.(상수취급) / let하고 똑같은 구역 단위이다.
const a = 100;
a = 250; //error
console.log(a) //250
{
	const a = 200;
	console.log(a) //200
	{
		const a = 300;
		console.log(a) //300
		{
			const a = 400;
			console.log(a) //400
		}
		console.log(a) //300
	}
	console.log(a) //200
}
console.log(a) //250
</script>
