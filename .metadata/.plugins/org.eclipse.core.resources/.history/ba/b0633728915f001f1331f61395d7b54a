<script type="text/javascript">
	let lottoNumbers = [];
	
	for(let i=0; i<6; i++){
		let number 
		
		do{
			number= parseInt(Math.random()*45 + 1);
		}while(number == lottoNumbers[i]);
		
		lottoNumbers.push(number);
		document.write(`<div class="lotto"><h3>${number}</h3></div>`);
		
	}
	
</script>
