<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<h3>1~10 사이의 덧셈 문제를 발생합니다. </h3>
	<input type="button" value="문제 생성" onclick="start()"/>
	<h3><span id="x">x</span> + <span id="y">y</span> = <span id="question">?</span></h3>
	<input type="button" value="결과 보기" onclick="printResult()" />
<script type="text/javascript">
var x;
var y;

function start(){
	document.getElementById("question").innerText = "?";
	x = Math.floor(Math.random() * 10) + 1;
	y = Math.floor(Math.random() * 10) + 1;	
	
	document.getElementById("x").innerText = x;
	document.getElementById("y").innerText = y;
}

function sum(x, y){
	return x + y;
}

function printResult(){
	var result = sum(x,y);
	document.getElementById("question").innerHTML = "<font color='red'>" + result + '</span>';
}
</script>
</body>
</html>