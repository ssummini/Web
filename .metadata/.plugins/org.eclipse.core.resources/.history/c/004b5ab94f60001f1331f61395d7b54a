$(function(){
	$('#join').submit(function(){
		let user_id = $('input[name="user_id"]').val();
		//id(!user_id){}
		if(user_id == ''){
			alert("아이디를 입력하세요.");
			$('input[name=user_id]').focus();
			return false;
		}
		id(user_pw = ''){
			alert("비밀번호를 입력하세요.");
			$('input[name=passward]').focus();
			return false;
		}
		return false; // 페이지 이동을 막음.
	});
	
	
});